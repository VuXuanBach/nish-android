<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="40dp" 
    android:background="#ffff" >


        <ImageView
            android:id="@+id/avatarPost"
            android:layout_width="25dp"
            android:layout_height="25dp" >
        </ImageView>

        <TextView
            android:id="@+id/usernamePost"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/avatarPost"
            android:paddingLeft="10dp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/datePost"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/usernamePost"
            android:paddingRight="10dp"
            android:textColor="@android:color/black" />

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layoutImagePost"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/avatarPost"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp" >

        <ImageView
            android:id="@+id/imagePost"
            android:layout_width="300dp"
            android:layout_height="280dp"
            android:gravity="center_horizontal" >
        </ImageView>
    </RelativeLayout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layoutLocationPost"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutImagePost"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <ImageView
            android:id="@+id/locationImagePost"
            android:layout_width="20dp"
            android:layout_height="20dp" >
        </ImageView>

        <TextView
            android:id="@+id/locationTextPost"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/locationImagePost"
            android:paddingLeft="10dp"
            android:textColor="@android:color/black" />
    </RelativeLayout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layoutLikePost"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutLocationPost"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <ImageView
            android:id="@+id/likeImagePost"
            android:layout_width="20dp"
            android:layout_height="20dp" >
        </ImageView>

        <TextView
            android:id="@+id/usernamePeopleLike"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/likeImagePost"
            android:paddingLeft="10dp"
            android:textColor="@android:color/black" />
    </RelativeLayout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layoutButtonPost"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutLikePost"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <Button
            android:id="@+id/commentButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/commentButton"
            android:drawableTop="@drawable/bu_comment" />

        <Button
            android:id="@+id/likeButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/commentButton"
            android:drawableTop="@drawable/bu_love" />
    </RelativeLayout>

</RelativeLayout>