<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/img_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3" />

    <HorizontalScrollView
        android:id="@+id/style_scroll_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="22" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/button_change_to_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_btn_original" />

            <Button
                android:id="@+id/button_change_to_lomo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_btn_lomo" />

            <Button
                android:id="@+id/button_change_to_old"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_btn_old" />

            <Button
                android:id="@+id/button_change_to_sharpen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_btn_sharpen" />

            <Button
                android:id="@+id/button_change_to_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_btn_light" />

            <Button
                android:id="@+id/button_change_to_neon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_btn_neon" />

            <Button
                android:id="@+id/button_change_to_pixelate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_btn_pixelate" />

            <Button
                android:id="@+id/button_change_to_invert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_btn_invert" />

            <Button
                android:id="@+id/button_change_to_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_btn_tv" />

            <Button
                android:id="@+id/button_change_to_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_btn_gray" />

            <Button
                android:id="@+id/button_change_to_relief"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_btn_relief" />

            <Button
                android:id="@+id/button_change_to_vague"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_btn_vague" />

            <Button
                android:id="@+id/button_change_to_oid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_btn_oil" />
        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>